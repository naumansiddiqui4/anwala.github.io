		    document.getElementById('RankTab1'),
    	    document.getElementById('RankTab2')
        ]
    }
    tab.init();
</script>
 <script type="text/javascript">
function dot_treand_shuffle(array) {
  var m = array.length, t, i;
  while (m) {
    i = Math.floor(Math.random() * m--);
    t = array[m];
    array[m] = array[i];
    array[i] = t;
  }
}

