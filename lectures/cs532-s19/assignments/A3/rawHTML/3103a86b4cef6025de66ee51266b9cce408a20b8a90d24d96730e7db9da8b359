<script> 
  $(document).ready(function(){
    var local_storage = localStorage['moeda'];
    local_storage = String(local_storage);
    if(local_storage !== 'undefined'){
      $("#moeda").val(localStorage['moeda']);
    }

    if(local_storage === 'undefined'){
        localStorage['moeda'] = $("#moeda option:selected").val();
    }
    else if(typeof localStorage['moeda'] !== $("#moeda option:selected").val()){
        localStorage['moeda'] = $("#moeda option:selected").val();                        
    }  
  });
