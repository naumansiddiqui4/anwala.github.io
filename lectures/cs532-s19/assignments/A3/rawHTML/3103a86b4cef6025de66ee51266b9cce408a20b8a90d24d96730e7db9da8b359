 <script>
    function cotacaoPassando(){
        var url = "/moedas/variacao";
        $.ajax({
            async: true,
            /* the route pointing to the post function */
            url: url,
            type: 'GET',
            /* send the csrf-token and the input to the controller */
            dataType: 'TEXT',
            /* remind that 'data' is the response of the AjaxController */
            error: function() {
            },
            success: function(result) {
                // $("#variacao").hide();
                $("#variacao").parent().css('visibility', 'hidden');
                var obj = jQuery.parseJSON(result);
                $.each( obj, function( key, value ) {                    
                    value.site_path = value.imagem_path.replace('images/logotipo', '').replace('.png', '');                  
                    if(localStorage['moeda'] == 'BRL'){
                        var str = value.variacao_reais;
                        var res = str.replace(",", ".");

                        var saldoFormatado = value.valor_reais.replace(',','.');
                    
                        saldoFormatado = parseFloat(saldoFormatado);
                        
                        if(saldoFormatado > 1){
                            var numero = saldoFormatado.toFixed(2).split('.');
                            numero[0] = numero[0].split(/(?=(?:...)*$)/).join('.');
                            numero = numero.join(',');                       
                        }
                        else{
                            var numero = saldoFormatado.toFixed(4).split('.');
                            numero[0] = numero[0].split(/(?=(?:...)*$)/).join('.');
                            numero = numero.join(',');
                        }
                        value.valor_reais = numero;

                        $("#variacao").append("<span class='variacao_dinamico'><a id='cotacaoPassando' href="+ value.site_path +">" + value.sigla +" = R$ " + value.valor_reais+ "</a>&nbsp;&nbsp;" + (parseFloat(res) > 0.0 ? "<span style='color:rgba(255,255,255,1);background-color:rgba(1,175,80,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_reais +"%</span>" : "<span style='color:rgba(255,255,255,1);background-color:rgba(242,66,54,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_reais +"%</span>") +"</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>");
                    }
                    else  if(localStorage['moeda'] == 'USD'){
                        var str = value.variacao_dolar;
                        var res = str.replace(",", ".");    
                        
                        var saldoFormatado = value.valor_dolar.replace(',','.');
                    
                        saldoFormatado = parseFloat(saldoFormatado);
                        
                        if(saldoFormatado > 1){
                            var numero = saldoFormatado.toFixed(2).split('.');
                            numero[0] = numero[0].split(/(?=(?:...)*$)/).join('.');
                            numero = numero.join(',');                       
                        }
                        else{
                            var numero = saldoFormatado.toFixed(4).split('.');
                            numero[0] = numero[0].split(/(?=(?:...)*$)/).join('.');
                            numero = numero.join(',');
                        }
                        value.valor_dolar = numero;
                        
                        $("#variacao").append("<span class='variacao_dinamico'><a id='cotacaoPassando' href="+ value.site_path +">" + value.sigla +" = $ " + value.valor_dolar+ "</a>&nbsp;&nbsp;" + (parseFloat(res) > 0.0 ? "<span style='color:rgba(255,255,255,1);background-color:rgba(1,175,80,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_dolar +"%</span>" : "<span style='color:rgba(255,255,255,1);background-color:rgba(242,66,54,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_dolar +"%</span>") +"</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>");
                    }
                    else  if(localStorage['moeda'] == 'EUR'){
                        var str = value.variacao_euro;
                        var res = str.replace(",", ".");

                        var saldoFormatado = value.valor_euro.replace(',','.');
                    
                        saldoFormatado = parseFloat(saldoFormatado);
                        
                        if(saldoFormatado > 1){
                            var numero = saldoFormatado.toFixed(2).split('.');
                            numero[0] = numero[0].split(/(?=(?:...)*$)/).join('.');
                            numero = numero.join(',');                       
                        }
                        else{
                            var numero = saldoFormatado.toFixed(4).split('.');
                            numero[0] = numero[0].split(/(?=(?:...)*$)/).join('.');
                            numero = numero.join(',');
                        }
                        value.valor_euro = numero;
                    
                        $("#variacao").append("<span class='variacao_dinamico'><a id='cotacaoPassando' href="+ value.site_path +">" + value.sigla +" = € " + value.valor_euro+ "</a>&nbsp;&nbsp;" + (parseFloat(res) > 0.0 ? "<span style='color:rgba(255,255,255,1);background-color:rgba(1,175,80,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_euro +"%</span>" : "<span style='color:rgba(255,255,255,1);background-color:rgba(242,66,54,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_euro +"%</span>") +"</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>");    
                    }   
                    else  if(localStorage['moeda'] == 'BTC'){
                        var valorCripto = value.valor_criptomoeda.replace(',','.');
                        valorCripto = parseFloat(valorCripto);
                        if(parseFloat(valorCripto) > 0){
                            var str = value.variacao_criptomoeda;
                            var res = str.replace(",", ".");

                            var saldoFormatado = value.valor_criptomoeda.replace(',','.');
                        
                            saldoFormatado = parseFloat(saldoFormatado);
                            
                            var numero = saldoFormatado.toFixed(8).split('.');                     
                        
                            value.valor_criptomoeda = numero;
                        
                            $("#variacao").append("<span class='variacao_dinamico'><a id='cotacaoPassando' href="+ value.site_path +">" + value.sigla +" = BTC " + value.valor_criptomoeda + "</a>&nbsp;&nbsp;" + (parseFloat(res) > 0.0 ? "<span style='color:rgba(255,255,255,1);background-color:rgba(1,175,80,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_criptomoeda +"%</span>" : "<span style='color:rgba(255,255,255,1);background-color:rgba(242,66,54,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_criptomoeda +"%</span>") +"</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>");    
                        }
                    }   
                    else{
                        var str = value.variacao_reais;
                        var res = str.replace(",", ".");

                        var saldoFormatado = value.valor_reais.replace(',','.');
                    
                        saldoFormatado = parseFloat(saldoFormatado);
                        
                        if(saldoFormatado > 1){
                            var numero = saldoFormatado.toFixed(2).split('.');
                            numero[0] = numero[0].split(/(?=(?:...)*$)/).join('.');
                            numero = numero.join(',');                       
                        }
                        else{
                            var numero = saldoFormatado.toFixed(4).split('.');
                            numero[0] = numero[0].split(/(?=(?:...)*$)/).join('.');
                            numero = numero.join(',');
                        }
                        value.valor_reais = numero;

                        $("#variacao").append("<span class='variacao_dinamico'><a id='cotacaoPassando' href="+ value.site_path +">" + value.sigla +" = R$ " + value.valor_reais+ "</a>&nbsp;&nbsp;" + (parseFloat(res) > 0.0 ? "<span style='color:rgba(255,255,255,1);background-color:rgba(1,175,80,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_reais +"%</span>" : "<span style='color:rgba(255,255,255,1);background-color:rgba(242,66,54,0.9); border-radius:5px; padding:5px;'>"+ value.variacao_reais +"%</span>") +"</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>");
                    }                     
                });
                marque();
            },
            beforeSend: function() {
            }
        });
    }

    function marque(){
        $(document).ready(function(){
            $('.marquee').marquee({
                pauseOnHover: true,
                //speed in milliseconds of the marquee
                duration: 28000,
                //gap in pixels between the tickers
                gap: 50,
                //time in milliseconds before the marquee will start animating
                delayBeforeStart: 0,
                //'left' or 'right'
                direction: 'left',
                //true or false - should the marquee be duplicated to show an effect of continues flow
                duplicated: false
            });
            $("#variacao").parent().css('visibility', 'visible');
        });
    }
 </script>
 
 

     
