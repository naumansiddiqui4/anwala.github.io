    <script type="text/javascript">
        function cotacao(moeda){
            var url_tratada = "/moeda/" + moeda;
            var CSRF_TOKEN = $('meta[name="csrf-token"]').attr('content');
            $.ajax({
                url: url_tratada,
                type: 'GET',
                data: {_token: CSRF_TOKEN},
                dataType: 'JSON',
                error: function() {
                },
                success: function(result2) {
                    var result = result2[0];
                    
                    if(localStorage['moeda'] == 'BTC'){
                        var valor = result.valor_criptomoeda;
                        $('#sigla').text('BTC');

                        var reais = valor.replace('.',',');
                        reais = reais.replace(',','.');

                        reais = parseFloat(reais);

                        var valorFinal = reais.toFixed(8).replace('.',',');
                        
                        var valorFormatado = formatReal(reais);
                    }
                    else{
                        if(localStorage['moeda'] == 'BRL'){
                            var valor = result.valor_reais;
                            $('#sigla').text('BRL');
                            // $("#cotSigla span").remove();
                            // var element = "<span style='font:52.5% Verdana;' class='symbol'>BRL</span>";
                            // $("#cotSigla").append(element);      
                        }
                        else if(localStorage['moeda'] == 'USD'){
                            var valor = result.valor_dolar;
                            $('#sigla').text('USD');
                            // $("#cotSigla span").remove();
                            // var element = "<span style='font:52.5% Verdana;' class='symbol'>USD</span>";
                            // $("#cotSigla").append(element);   
                        }
                        else if(localStorage['moeda'] == 'EUR'){
                            var valor = result.valor_euro;
                            $('#sigla').text('EUR');
                            // $("#cotSigla span").remove();
                            // var element = "<span style='font:52.5% Verdana;' class='symbol'>EUR</span>";
                            // $("#cotSigla").append(element);   
                        }
                    

                        var reais = valor.replace('.',',');
                        reais = reais.replace(',','.');

                        reais = parseFloat(reais);

                        var valorFinal = reais.toFixed(2).replace('.',',');
                        
                        var valorFormatado = formatReal(reais);
                    }
                    
                    // var valorFormatado = formatReal(valorFinal.replace(',',''));                      
                    $("#nacional").val(valorFormatado);
                    $("#armazenarMoeda").val(valorFinal);
                    $("#criptomoeda").text(result.sigla);
                    
                    $("#imgMoeda").attr('src',result.imagem_path);
                    // $("#moeda").append("<img src='"+ result.moedas.imagem_path +"' style='max-width: 100px; min-width: 60px; width: 20%;' />")

                    a8(elEst);
                    a8(elNac);

                    document.title = result.sigla + ' - ' + valorFormatado;
                    
                    var link = document.querySelector("link[rel*='icon']") || document.createElement('link');
                    link.type = 'image/x-icon';
                    link.rel = 'shortcut icon';
                    link.href = result.imagem_path;
                    document.getElementsByTagName('head')[0].appendChild(link);
                    
                    moedaGrafico("/moedagrafico/" + moeda);                                            
                },
                beforeSend: function() {
                }
            });
        }
    


    function moedaGrafico(url){
        var CSRF_TOKEN = $('meta[name="csrf-token"]').attr('content');
        $.ajax({
            url: url,
            type: 'GET',
            data: {_token: CSRF_TOKEN},
            dataType: 'JSON',
            error: function() {
            },
            success: function(result) {   
                require([ 
                    'echarts' 
                    // 'echarts/chart/line', 
                    // 'echarts/component/legend', 
                    // 'echarts/component/grid', 
                    // 'echarts/component/tooltip', 
                    // 'echarts/component/dataZoomInside' 
                ], function (echarts) { 
 
                    var chart = echarts.init(document.getElementById('main')); 
 
                    var xAxisData = []; 
                    var data = []; 
 
 
                    for (var i = 0; i < result.length; i++) { 
                        if(localStorage['moeda'] == 'BRL'){  
                            var valor = parseFloat(result[i].valor_reais); 
                            valor = valor.toFixed(2);
                        } 
                        else  if(localStorage['moeda'] == 'USD'){ 
                            var valor = parseFloat(result[i].valor_dolar); 
                            valor = valor.toFixed(2);
                        } 
                        else  if(localStorage['moeda'] == 'EUR'){ 
                            var valor = parseFloat(result[i].valor_euro); 
                            valor = valor.toFixed(2);
                        }                            
                        else  if(localStorage['moeda'] == 'BTC'){ 
                            var valor = parseFloat(result[i].valor_criptomoeda); 
                            valor = valor.toFixed(8);
                        } 
                        xAxisData.push('dia ' + result[i].DIASCRIADO); 
                        data.push(valor); 
                    } 
                    chart.setOption({ 
                        backgroundColor: '#eee', 
                        title: { 
                            text: 'Variação Mês Atual' 
                        }, 
                         
                        tooltip: { 
                            trigger: 'axis', 
                            axisPointer: { 
                                type: 'line' 
                            } 
                        }, 
                        xAxis: { 
                            data: xAxisData 
                        }, 
                        yAxis: { 
                            splitArea: { 
                                show: true 
                            },
                            scale: true,
                        }, 
                        series: [{ 
                            name: 'Preço', 
                            type: 'line', 
                            symbol: 'circle', 
                            symbolSize: 10, 
                            data: data 
                        }] 
                    }); 
                }); 
            }, 
            beforeSend: function() {
            }
        });
    }
    // var url = document.URL.substr(document.URL.lastIndexOf('/') + 1).replace('#','').replace('?moeda=USD','').replace('?moeda=EUR','').replace('?moeda=BRL','');
    // var complete = 'modais.' + url + '.sobre';
    // alert(complete);

</script>

