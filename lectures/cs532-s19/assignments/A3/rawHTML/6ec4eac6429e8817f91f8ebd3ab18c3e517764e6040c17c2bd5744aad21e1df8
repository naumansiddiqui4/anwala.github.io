        // Closes pop-up alert if cookie is present
        function hideAlertBar() {
          setCookie("ad-bar-alert",true,30); //save again for 30 minutes
          document.getElementById("ad-bar-alert").style.display='none';
        }
        if(getCookie('ad-bar-alert')){
          hideAlertBar();
        }
        function focustime(){
          var input = document.getElementById ("search_input"); 
          input.focus();
        }
        // Search button
        function buttonUp(){
        	var input = document.getElementById('search_input');
        	var value = document.getElementById('searchbox-icon');
        	if( input.value.length !== 0){
        		value.style.color = 'white';
        	} else {
        		value.style.color = 'black';
        	}
        }
