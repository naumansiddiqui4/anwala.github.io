<script src="https://static.ctvnews.ca/bellmedia/common/js/weatherList.js"></script>
<script type="text/javascript" src = "https://static.ctvnews.ca/bellmedia/common/js/jquery.xdomainrequest.min.js"></script>

<script type="text/javascript">
  jQuery(document).ready(function() {
  requiresDependency('https://static.ctvnews.ca/bellmedia/common/css/jqui/jquery-ui-1.8.18.custom.css', function() {});

  requiresDependency('https://static.ctvnews.ca/bellmedia/common/js/jquery-ui-tabs-1.5.packed.js', function() {
    requiresDependency('https://static.ctvnews.ca/bellmedia/common/js/jquery-ui-1.8.18.custom.min.js', function() {

  getSavedWeatherCity_7515921_21();

 if (!Object.keys) {
        Object.keys = (function () {
          'use strict';
          var hasOwnProperty = Object.prototype.hasOwnProperty,
              hasDontEnumBug = !({toString: null}).propertyIsEnumerable('toString'),
              dontEnums = [
                'toString',
                'toLocaleString',
                'valueOf',
                'hasOwnProperty',
                'isPrototypeOf',
                'propertyIsEnumerable',
                'constructor'
              ],
              dontEnumsLength = dontEnums.length;

          return function (obj) {
            if (typeof obj !== 'object' && (typeof obj !== 'function' || obj === null)) {
              throw new TypeError('Object.keys called on non-object');
            }

            var result = [], prop, i;

            for (prop in obj) {
              if (hasOwnProperty.call(obj, prop)) {
                result.push(prop);
              }
            }

            if (hasDontEnumBug) {
              for (i = 0; i < dontEnumsLength; i++) {
                if (hasOwnProperty.call(obj, dontEnums[i])) {
                  result.push(dontEnums[i]);
                }
              }
            }
            return result;
          };
        }());
      }
      var autoCompleteCities_7515921_21 = Object.keys(weatherList);

      jQuery("#city_7515921_21").autocomplete({
        source: function(req, responseFn) {
                  var re = jQuery.ui.autocomplete.escapeRegex(req.term);
                  var matcher = new RegExp( "^" + re, "i" );
                  var a = jQuery.grep( autoCompleteCities_7515921_21, function(item,index){return matcher.test(item);});
                  responseFn( a );
                },
        minLength: 1,
        select: function( event, ui ) {
                  var selectedObj = ui.item;
                  jQuery("#city_7515921_21").val(selectedObj.label);
                  getWeather_7515921_21();
                }
      });
    });
  });
  jQuery("#NotYourCity_7515921_21").click(displayCity_7515921_21);
  jQuery("#city_7515921_21").blur(hideCity_7515921_21);
  jQuery("#weatherform_7515921_21").submit(function(){getWeather_7515921_21(); return false;});

});

function keys(object) {
    if (Type(object) != OBJECT_TYPE) { throw new TypeError(); }
    var results = [];
    for (var property in object) {
      if (object.hasOwnProperty(property)) {
        results.push(property);
      }
    }
    return results;
  }

function getWeather_7515921_21() {
  var city = jQuery("#city_7515921_21").val();
  var cityName = city.substr(0, city.indexOf(','));
  findCityId_7515921_21(city);
  var cityId = jQuery("#city_id_7515921_21").val();
  if (cityId == "none"){
    jQuery("#error").html("" + city);
  }else{
    loadCityWeather_7515921_21(cityName, cityId);
    setWeatherElementCookie_7515921_21(escape(cityName), cityId);

  }
}

function findCityId_7515921_21(cityname) {
  var isChanged = 0;
  cityname = cityname.toLowerCase();
  jQuery.each(weatherList, function(city, city_id){
    if (city.toLowerCase() == cityname) {
      jQuery("#city_id_7515921_21").val(city_id);
      isChanged =1;
      return false;
    }
  });
  if (isChanged == 0){
    jQuery("#city_id_7515921_21").val("none");
    return false;
  }
}

function getCityName(maps,value){
  for(var key in maps){
    if(maps[key] == value){
      return key;
    }
  }
  return 'none';
}

  // current weather
function loadCityWeather_7515921_21(cityName, cityId) {
  jQuery("#weatherbug").html("");
  var url = '//sympatico.vo.llnwd.net/o46/export/weather_json/' + cityId + '.json'
jQuery.ajax({
  url: url,
  dataType: 'json',
  success: function(data){
    var items = [];
    var description = data[cityId].current.description;
    var graphic = data[cityId].current.graphic;
    var temprature = data[cityId].current["temp-meter"].temperature.value;
    var cityProvName = getCityName(weatherList, cityId);
    var cityName = cityProvName.substr(0, cityProvName.indexOf(','));
    if((graphic != "-99") && (temprature != "-99")){
      items.push( "<div class='weathergraphic'><img src='https://static.ctvnews.ca/bellmedia/cp24/img/newWeather/" + graphic + ".png' /></div>" );
      items.push( "<p class='weatherTopID'><span class='weatherTemp'>" + temprature + "&#176;C</span>" + description + " </p>"  );
    }else if(cityProvName == "none"){
      items.push("<span class='error'>The city ID is wrong.</span>");
    }else{
      items.push("<span class='error'>The information for this city is not available.</span>");
    }
    jQuery("#weatherbug").html( items.join( "" ));
    jQuery("span.weatherCity").html(cityName + " weather");
    jQuery("#city_7515921_21").val("");
    jQuery("#city_id_7515921_21").val("");

   }
  });
}

function displayCity_7515921_21(){
      jQuery("#city_7515921_21").show();
      jQuery("#city_7515921_21").focus();
}

function hideCity_7515921_21() {
  jQuery("#city_7515921_21").hide();
}


//cookie part
function setWeatherElementCookie_7515921_21(city, cityId) {
 var today = new Date();
 var expire = new Date();
 var nDays = 365 * 10;
 expire.setTime(today.getTime() + (60*60*1000*24*nDays));
  var c_name = "ctv_weatherelement_city";
  if (cityId != null && cityId != "") {
    document.cookie=c_name + "=" + city + "_" + cityId
    + "_https://bc.ctvnews.ca/vancouver-current-conditions-7.515921/vancouver-current-conditions-7.515921;expires="+expire.toGMTString();
  }
}

function getWeatherElementCookie_7515921_21()
{
  var c_name = "ctv_weatherelement_city";
  var i,x,y,ARRcookies=document.cookie.split(";");
  for (i=0;i<ARRcookies.length;i++)
  {
    x=ARRcookies[i].substr(0,ARRcookies[i].indexOf("="));
    y=ARRcookies[i].substr(ARRcookies[i].indexOf("=")+1);
    x=x.replace(/^\s+|\s+$/g,"");
    if (x==c_name)
      {
      return unescape(y);
      }
   }
}

function getSavedWeatherCity_7515921_21(){
  var storedCity = getWeatherElementCookie_7515921_21();
  var city = '';
  var cityId = '';

  if(storedCity){
    var cookieValueArr = storedCity.split("_");
    }
  // cookie exist and the url path must be same
  if(storedCity && cookieValueArr[2] == "https://bc.ctvnews.ca/vancouver-current-conditions-7.515921/vancouver-current-conditions-7.515921"){
    if(cookieValueArr.length = 3){
      city = cookieValueArr[0];
      cityId = cookieValueArr[1];
    }
  }else if("" != ""){
    cityId = "";
    var cityProvName = getCityName(weatherList, cityId);
    city = cityProvName.substr(0, cityProvName.indexOf(','));
  }else{
    cityId = "CAXX0518";
    var cityProvName = getCityName(weatherList, cityId);
    city = cityProvName.substr(0, cityProvName.indexOf(','));
  }

  loadCityWeather_7515921_21(city, cityId);

}

